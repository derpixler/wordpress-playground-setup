{
	"name": "WordPress Playground",
	"description": "Build a vagrant Playground with a running Wordpress inside",
	"keywords": [
		"wordpress",
		"multisite",
		"plugin",
		"database",
		"vagrant"
	],
	"license": "GPL-3.0+",
	"type": "wordpress-playground-vagrant",
	"homepage": "https://gist.github.com/derpixler/7d26324e651fcb72816a",
	"authors": [
		{
			"name": "Rene Reimann",
			"homepage": "http://rene-reimann.de",
			"email": "info@rene-reimann.de",
			"role": "Developer"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org"
		},
		{
			"type": "vcs",
			"url": "git@bitbucket.org:webdevmedia/myhotelshop-booking-widget.git"
		},
		{
			"type": "vcs",
			"url": "git@bitbucket.org:webdevmedia/cpt-custompages.git"
		},
		{
			"type": "vcs",
			"url": "git@bitbucket.org:webdevmedia/m-privathotels-theme.git"
		},
		{
			"type": "vcs",
			"url": "git@bitbucket.org:webdevmedia/customeralliance-reviews.git"
		},
		{
			"type": "vcs",
			"url": "git@bitbucket.org:webdevmedia/wp-db-migrate-pro.git"
		},
		{
			"type": "vcs",
			"url": "git@bitbucket.org:webdevmedia/mhs-controller-handle.git"
		},
		{
			"type": "vcs",
			"url": "git@bitbucket.org:webdevmedia/wp-migrate-db-pro-multisite-tools.git"
		},
		{
			"type": "vcs",
			"url": "git@bitbucket.org:webdevmedia/contact-form-7-to-database-extension.git"
		},
		{
			"type": "vcs",
			"url": "git@bitbucket.org:webdevmedia/wp-multi-network.git"
		},
		{
			"type": "vcs",
			"url": "git@bitbucket.org:webdevmedia/uploads.git"
		},
	    {
	      "type": "package",
	      "package": {
	        "name": "vagrant",
	        "version": "1.3.1",
	        "source": {
	          "url": "https://github.com/derpixler/vagrant-apache-php-mysql.git",
	          "type": "git",
	          "reference": "1.3.1"
	        }
	      }
	    }
    ],
    "config": {
      "secure-http": true
    },
	"require-dev": {

	},
    "require": {
		"php": ">=5.3.0",
		"mnsami/composer-custom-directory-installer": "1.1.*",
		"vagrant": "1.3.*",

		"johnpbloch/wordpress": "4.7.4",

		"myhotelshop/wp-db-migrate-pro": "1.7.*",
		"myhotelshop/wp-migrate-db-pro-multisite-tools": "1.1.5",
		"myhotelshop/contact-form-db": "dev-master",

		"wpackagist-plugin/wp-multisite-sso": "1.*",
		"wpackagist-plugin/multilingual-press": "2.*",
		"wpackagist-plugin/wordpress-seo": "4.*",
		"wpackagist-plugin/kirki": "2.3.*",
		"wpackagist-plugin/wp-super-cache": "1.4.*",
		"wpackagist-plugin/contact-form-7": "4.*",
		"wpackagist-plugin/duplicate-post": "3.1.*",
		"wpackagist-plugin/widget-importer-exporter": "1.4.*",
		"wpackagist-plugin/wordpress-importer": "0.6.3",
		"wpackagist-plugin/lazy-load": "0.6.1",
		"wpackagist-plugin/duracelltomi-google-tag-manager": "1.5.*",
		"wpackagist-plugin/attachment-taxonomies": "1.0.*",
		"wpackagist-plugin/redirection": "2.5",
		"wpackagist-plugin/backwpup": "3.3.*",
		"wpackagist-plugin/popup-maker": "1.4.*",
		"wpackagist-plugin/regenerate-thumbnails-advanced": "1.4.*",
		"wpackagist-plugin/post-thumbnail-editor": "2.4.8",
		"wpackagist-plugin/update-alt-attribute": "2.2.0",
		"wpackagist-plugin/wordfence": "6.3.*",
		"wpackagist-plugin/image-widget": "4.3.1",
		"wpackagist-plugin/social-media-icons-widget": "16.07",
		"wpackagist-plugin/secondary-title": "1.9.1",

		"webdevmedia/customeralliance-reviews": "0.2.0",

		"myhotelshop/ibe-widget": "dev-master",
		"myhotelshop/controller": "dev-master",
		"myhotelshop/m-privathotels-theme": "1.0*",
		"myhotelshop/cpt-custompages": "dev-master",

		"stuttter/wp-multi-network": "dev-master"

    },
    "extra": {
		"wordpress-install-dir": "vagrant/html/wordpress/wp",
		"wordpress-content-dir": "vagrant/html/wordpress/wp-content",
        "installer-paths": {
	      "vagrant/": ["vagrant"],
		  "vagrant/html/wordpress/wp-content/mu-plugins/{$name}/": [
			  "myhotelshop/controller"
		  ],
		  "vagrant/html/wordpress/": ["wordpress/core"],
          "vagrant/html/wordpress/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
          "vagrant/html/wordpress/wp-content/themes/{$name}/": ["type:wordpress-theme"]

		}
    },
    "scripts" : {
        "post-install-cmd": "assets/provision/prepare-vagrant.sh",
		"post-update-cmd": "assets/provision/prepare-vagrant.sh"
    }
}
